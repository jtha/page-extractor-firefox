{
  "manifest_version": 3,
  "name": "HTML Extractor",
  "version": "1.0",
  "description": "Extracts the HTML of the current page and sends it to an endpoint.",
  "icons": {
    "48": "icons/icon-48.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "notifications"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_icon": "icons/icon-48.png",
    "default_title": "Extract HTML"
  },
  "background": {
    "scripts": ["background.js"]
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; connect-src http://localhost:* http://127.0.0.1:*;"
  }
}