{
  "manifest_version": 2,
  "name": "HTML Extractor",
  "version": "1.0",
  "description": "Extracts the HTML of the current page and sends it to an endpoint.",
  "icons": {
    "48": "icons/icon-48.png"
  },
  "permissions": [
    "activeTab",
    "http://*/*",
    "https://*/*",
    "notifications"
  ],
  "browser_action": {
    "default_icon": "icons/icon-48.png",
    "default_title": "Extract HTML"
  },
  "background": {
    "scripts": ["background.js"]
  }
}